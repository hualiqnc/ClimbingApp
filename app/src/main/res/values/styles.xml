<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="Widget.ClimbingApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.ClimbingApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.ClimbingApp.Score" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.ClimbingApp.HoldInfo" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.ClimbingApp.ZoneInfo" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.ClimbingApp.HighScore" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources> 